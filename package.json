{
  "name": "Nitro-Fediverse",
  "version": "0.0.1",
  "description": "Implementation of a federated ActivityPub Server",
  "main": "src/index.js",
  "engines": {
    "node": ">=10.10.0"
  },
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --exec babel-node src/",
    "build": "babel src/ -d dist/ --copy-files",
    "preserver": "yarn build",
    "server": "node dist/",
    "lint": "eslint src --config .eslintrc.js --fix",
    "test:cucumber": "wait-on tcp:4100 && cucumber-js --require-module @babel/register --exit test/",
    "test": "run-p --race server test:cucumber"
  },
  "dependencies": {
    "activitystrea.ms": "^2.1.3",
    "apollo-cache-inmemory": "^1.4.2",
    "apollo-client": "^2.4.12",
    "apollo-link-context": "^1.0.14",
    "apollo-link-http": "^1.5.11",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.2.0",
    "express": "^4.16.3",
    "express-basic-auth": "^1.1.5",
    "generate-rsa-keypair": "^0.1.2",
    "graphql": "^14.1.1",
    "graphql-tag": "^2.10.1",
    "request": "^2.88.0",
    "trunc-html": "^1.1.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-throw-expressions": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "cucumber": "^5.1.0",
    "eslint": "^5.14.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "faker": "^4.1.0",
    "graphql-request": "^1.8.2",
    "jest": "^24.1.0",
    "neo4j-driver": "^1.7.2",
    "node-fetch": "^2.3.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "wait-on": "^3.2.0"
  }
}
